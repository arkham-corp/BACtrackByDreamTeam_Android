<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/driver_textViewDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TEXT_DRIVER"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/label_size_middle" />

        <EditText
            android:id="@+id/driver_editTextDriver"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textEmailAddress"
            android:labelFor="@+id/driver_editTextDriver"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:id="@+id/driver_btnDecision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/BTN_DECISION"
        android:textSize="50sp" />

</LinearLayout>