            <TextView
                android:id="@+id/dialog_text"
                android:text="@string/AGREEMENT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:scrollHorizontally="true" />
        </LinearLayout>
</ScrollView>
